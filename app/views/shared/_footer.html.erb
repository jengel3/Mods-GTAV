<div id="contact-popup" class="imageupload_popup_wrap mfp-hide mfp-with-anim">
    <h3>Contact</h3>
    <h4>You should recieve a response within 48 hours.</h4>
    <%= form_tag contact_path, method: :post do %>
    <div class="contact-popup">
        <%= label_tag 'username' %><%= text_field :contact, :username, value: (current_user ? current_user.username : ''), class: 'contactboxes' %>
        <%= label_tag 'email' %><%= email_field :contact, :email, value: (current_user ? current_user.email : ''), class: 'contactboxes' %>
        <%= label_tag 'message' %><%= text_area :contact, :message, value: '', class: 'contactboxes', rows: "7", placeholder: 'Provide as much detail as possible...' %>
    </div>
    <div align='center' class="g-recaptcha" data-sitekey="6LfAOwUTAAAAANYzYWge_qoRJ7xDV-DshF8__6J_"></div>

    <div class="bottom_buttons_wrap">
        <%= submit_tag 'Send', class: 'upload' %>
    </div>
    <% end %>
    <script src='https://www.google.com/recaptcha/api.js' async defer></script>
</div>