<%= render 'shared/submissions', submissions: @submissions %>
<%= content_for :scripts do %>
<script type="text/javascript">
	$(document).ready(function(){
		$('.submissiondate').hide();
		
		$(".modthumbnailwrap").on({
			mouseenter: function () {
				$('.submissiondate', this).stop().fadeIn(300);
			},
			mouseleave: function () {
				$('.submissiondate', this).stop().fadeOut(100);
			}
		});
	});
</script>
<% end %>
<%= content_for :sidebar do %>
<h3>Subcategories</h3>
<div class="subcategories_wrap">
	<a href="<%= url_for :subcategory => 'all' %>">
		<div class="subcategory <%= active_sub('all') %>">
			<p><%= t 'common.all' %></p>
		</div>
	</a>
	<% if params[:category] && @subcategories %>
	<% @subcategories.each do |sub| %>
	<a href='<%= url_for(:subcategory => sub.downcase.gsub(' ', '_')) %>'>
		<div class="subcategory <%= active_sub(sub) %>">
			<p><%= sub %></p>
		</div>
	</a>
	<% end %>
	<% end %>
	<a href="<%= url_for :subcategory => 'other' %>">
		<div class="subcategory <%= active_sub('Other') %>">
			<p><%= t 'common.other' %></p>
		</div>
	</a>
</div>
<% end %>