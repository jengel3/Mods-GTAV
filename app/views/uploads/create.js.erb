<% if @upload.errors.any? %>
<% errors = {errors: @upload.errors }.to_json.html_safe %>
var errs = renderErrors('<%= j errors %>');
var notice = $('#upload-error');
$(notice).html(errs);
$(notice).css('display', 'inline');
$(notice).shake();
<% else %>
var notice = $('#upload-error');
$(notice).addClass('notice').text("File uploaded! Refreshing...");
$(notice).fadeIn("slow");
setTimeout(function() {
	location.reload(true);
}, 1500);
<% end %>