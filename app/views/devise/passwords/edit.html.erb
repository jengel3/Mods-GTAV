<table class="onpagelogintitles">
  <tr>
    <td>Reset Password</td>
  </tr>
</table>
<div class="resetform_inputwrap">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password, class: 'password-input', placeholder: 'Password', autocomplete: "off" %>
  <%= f.password_field :password_confirmation, class: 'password-input', placeholder: 'Confirm Password', autocomplete: "off" %>
  <div class="passwordreset_notificationmessagewrap errormessage"><span class="passwordreset_notificationtext">Your password will now be permanently changed on Mods-GTAV.com </span></div>
  <%= f.submit 'Submit', class: 'signinbutton' %>
  <% end %>
</div>