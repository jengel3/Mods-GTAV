<head>
	<title><%= content_for?(:title) ? yield(:title) + ' :: Mods-GTAV ' : 'Mods-GTAV' %></title>
	<%= stylesheet_link_tag "application" %>
	<%= javascript_include_tag "application" %>
	<link href='https://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Asap:400,700' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Niconne' rel='stylesheet' type='text/css'>

	<!-- Social Media Meta -->
	<meta property="og:title" content="GTA 5 Mods" />
	<meta property="og:type" content="website" />
	<meta property="og:url" content="http://www.Mods-GTAV.com" />
	<meta property="og:image" content="http://i.imgur.com/CPCIBLl.png" />
	<meta property="og:description" 
	content="The #1 source for GTA 5 Modifications. PC Mods for Grand Theft Auto V include maps, scipts, tools, textures, models and more!" />

	<!-- Twitter display meta -->
	<meta name="twitter:card" content="summary">
	<meta name="twitter:creator" content="@Mods-GTAV_com">

	<!-- Support various devices with different icons -->
	<link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-57x57.png">
	<link rel="apple-touch-icon" sizes="60x60" href="/apple-icon-60x60.png">
	<link rel="apple-touch-icon" sizes="72x72" href="/apple-icon-72x72.png">
	<link rel="apple-touch-icon" sizes="76x76" href="/apple-icon-76x76.png">
	<link rel="apple-touch-icon" sizes="114x114" href="/apple-icon-114x114.png">
	<link rel="apple-touch-icon" sizes="120x120" href="/apple-icon-120x120.png">
	<link rel="apple-touch-icon" sizes="144x144" href="/apple-icon-144x144.png">
	<link rel="apple-touch-icon" sizes="152x152" href="/apple-icon-152x152.png">
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-icon-180x180.png">
	<link rel="icon" type="image/png" sizes="192x192"  href="/android-icon-192x192.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
	<link rel="shortcut icon" href="/favicon.ico">
	<link rel="icon" sizes="16x16 32x32 64x64" href="/favicon.ico">
	<link rel="manifest" href="/manifest.json">
	<meta name="msapplication-TileColor" content="#ffffff">
	<meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
	<meta name="theme-color" content="#ffffff">

	<%= csrf_meta_tags %>

	<!-- Google analytics -->
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-60401809-1', 'auto');
		ga('send', 'pageview');
	</script>

	<script type="application/ld+json">
		{ "@context" : "http://schema.org",
		"@type" : "CreativeWork",
		"name" : "Mods-GTAV",
		"url" : "http://www.mods-gtav.com",
		"sameAs" : ["http://twitter.com/Mods_GTAV",
		"https://plus.google.com/111469834211307832883"],
		"dateCreated": "2015-03-01",
		"dateModified": "2015-03-05",
		"keywords": "GTA 5 Mods, grand theft auto, gta 5 pc, car mods",
		"audience": "Grand Theft Auto players" }
	</script>
</head>
<body>

	<div class="fullpagewrap">
		<div class="logoheader">
		</div>
		<div class="header">
			<div class="navigation_bar_wrap">
				<ul>
					<li><a href="<%= root_path %>"><h2>Home</h2><img src="<%= asset_path('home50color.png') %>" alt="Navigation Icon" /></a></li>
					<li><h2>Tools</h2><img src="<%= asset_path('user50color.png') %>" alt="Navigation Icon" /></li>
					<li><h2>Maps</h2><img src="<%= asset_path('levels50color.png') %>" alt="Navigation Icon" /></li>
					<li class="active_menu_item"><h2>Vehicles</h2><img src="<%= asset_path('car50color.png') %>" alt="Navigation Icon" /></li>
					<li><h2>Textures</h2><img src="<%= asset_path('user50color2.png') %>" alt="Navigation Icon" /></li>
					<li><h2>Script</h2><img src="<%= asset_path('car50color.png') %>" alt="Navigation Icon" /></li>
					<li><h2>Misc</h2><img src="<%= asset_path('upload50color.png') %>" alt="Navigation Icon" /></li>
					<li><h2>Weapons</h2><img src="<%= asset_path('levels50color.png') %>" alt="Navigation Icon" /></li>
					<li><h2>Player</h2><img src="<%= asset_path('user50color.png') %>" alt="Navigation Icon" /></li>
				</ul>
			</div>
			<div class="active_bar_wrap">

			</div>
		</div>
		<div class="fullcontentwrap">
			<div class="sorting_options_wrap">
				<div class="modsortingoptions_wrap">
					<div id="modsortingoptions">
						<ul>
							<li><a href="#">Newest<span class="downarrowsymbol"><img src="<%= asset_path('downarrow.png') %>" /></span></a>
								<ul>
									<li><a href="#">Popular</a></li>
									<li><a href="#">Most Liked</a></li>
								</ul>
							</li>
						</ul>
					</div>
					<div id="modsortingoptions">
						<ul>
							<li><a href="#">Now<span class="downarrowsymbol"><img src="<%= asset_path('downarrow.png') %>" /></span></a>
								<ul>
									<li><a href="#">This Week</a></li>
									<li><a href="#">This Month</a></li>
									<li><a href="#">All Time</a></li>
								</ul>
							</li>
						</ul>
					</div>
				</div>
				<%= link_to 'Add Mod +', new_submission_path, class: 'addmodbutton' %>
				<div class="searchwrap">
					<input type="text" name="search" class="search" placeholder="Search" />
					<img src="<%= asset_path('searchbutton.png') %>" class="searchbutton accentcolor" />     
				</div>
			</div>
			<div class="mainpagewrap">
				<div class="mainpage">
					<%= yield %>
				</div>
				<div class="right_sidebar_preview"><div class="sidebar_expand_button"> < </div></div>
				<div class="right_sidebar">
					<div class="userprofilebox">
						<div class="userinfo_profilewrap">
							<% if current_user %>
							<div class="user_avatar_wrap"><%= avatar(current_user) %></div>
							<div class="userinfo">
								<div class="username"><%= current_user.username %><div class="user_online_indicator"></div></div>
								<div class="userdesc">Mod Creator</div>
							</div>
							<% else %>

							<input class="registerbutton" type="submit" value="Register" />
							<p class="signin_option">Have an account? <a class="signinlink" href="" onclick="return false;">Sign in.</a></p>
							<div class="inputwrap signinwrap">
								<%= form_for(:user, url: user_session_path) do |f| %>
								<%= f.text_field :login, class: 'login-input', autocomplete: 'off', type: 'text', placeholder: 'Email or Username' %>
								<%= f.password_field :password, class: 'login-input', autocomplete: 'off', type: 'password', placeholder: 'Password' %>
								<%= f.submit 'Submit', class: 'submit_login_data' %>
								<div class="forgotwrap"> <a class="forgotlink" href="" onclick="return false;">forgot details?</a></div>
								<a href=""><img class="steamsignin" src="<%= asset_path('steamsignin.png') %>" alt="Sign In with Steam" /></a>
								<% end %>
							</div>
							<div class="inputwrap registerwrap">
								<%= form_for(:user, url: user_registration_path) do |f| %>
								<%= f.email_field :email, class: 'register-input', autocomplete: 'off', type: 'text', placeholder: 'Email' %>
								<%= f.text_field :username, class: 'register-input', autocomplete: 'off', type: 'text', placeholder: 'Username' %>
								<%= f.password_field :password, class: 'register-input', autocomplete: 'off', type: 'password', placeholder: 'Password' %>
								<%= f.password_field :password_confirmation, class: 'register-input', autocomplete: 'off', type: 'password', placeholder: 'Confirm Password' %>
								<%= f.submit 'Submit', class: 'submit_login_data' %>
								<a href=""><img class="steamsignin" src="<%= asset_path('steamsignin.png') %>" alt="Sign In with Steam" /></a>
								<% end %>
							</div>	
							<div class="inputwrap resetpasswordwrap">
								<%= form_for(:user, url: user_password_path) do |f| %>
								<%= f.email_field :email, autofocus: true, class: 'resetpassword-input', autocomplete: 'off', type: 'email', placeholder: 'Email' %>
								<div class="forgotwrap">An email will be sent to your account with instructions on changing your password</div>
								<% end %>
							</div>
							<% end %>
						</div>

					</div> 
					<div class="subcategoriesbox">
						<h3>Subcategories</h3>
						<div class="subcategories_wrap">
							<div class="subcategory">
								<p>All</p>
							</div>
							<div class="subcategory">
								<p>Jeep</p>
							</div>
							<div class="subcategory active_subcategory">
								<p>Lamborghini</p>
							</div>
							<div class="subcategory">
								<p>Ford</p>
							</div>
							<div class="subcategory">
								<p>Nissan</p>
							</div>
							<div class="subcategory">
								<p>Subaru</p>
							</div>
							<div class="subcategory">
								<p>Ferrari</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<% if params[:controller] == 'submissions' && params[:action] == 'index' %>
			<div class="paginationfooter">
				<div class="paginationwrap">
					<a href="" class="pagination_prev_button"><div class="pagination_link">Prev</div></a>
					<div class="pagination_numbers_wrap">
						<a href="" class="pagenumber"><div class="pagination_link">1</div></a>a>
						<a href="" class="pagenumber activepagenumber"><div class="pagination_link">2</div></a>
						<a href="" class="pagenumber"><div class="pagination_link">3</div></a>
						<a href="" class="pagenumber"><div class="pagination_link" >4</div></a>
						<a href="" class="pagenumber"><div class="pagination_link">5</div></a>
						<a href="" class="pagenumber"><div class="pagination_link">6</div></a>
						<a href="" class="pagenumber"><div class="pagination_link">...</div></a>
						<a href="" class="pagenumber"><div class="pagination_link">18</div></a>
					</div>
					<a href="" class="pagination_next_button"><div class="pagination_link">Next</div></a>        
				</div>
			</div>
			<% end %>

		</div>
	</div>

</body>