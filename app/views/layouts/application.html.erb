<!DOCTYPE html>
<html ng-app='gta'>
<head>
	<base href="/">
	<%= stylesheet_link_tag "application" %>
	<%= javascript_include_tag "application" %>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= content_for?(:title) ? yield(:title) : "Mods-GTAV" %></title>
	<link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Niconne' rel='stylesheet' type='text/css'>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="logoheader">
		<div class="inner_logoheader_wrap">
			<img class="sitelogo" src="<%= image_path('sitelogo.png') %>" />
			<div id="contentoptions" class="theme_dropdown_button">
				<ul>
					<li><a href="#">Theme <span class="downarrowsymbol">&#x25BC;</span></a>
						<ul>
							<li><a class="default_theme" href="#">Default</a></li>
							<li><a class="blue_theme" href="#">Blue</a></li>
							<li><a class="green_theme" href="#">Green</a></li>
							<li><a class="orange_theme" href="#">Orange</a></li>
						</ul>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="pagewrap">

		<div class="mobile_dropdown_menu">
			<div class="mobile_menu_option">Home</div>
			<div class="mobile_menu_option">Tools</div>
			<div class="mobile_menu_option">Maps</div>
			<div class="mobile_menu_option">Vehicles</div>
			<div class="mobile_menu_option">Misc</div>
			<div class="mobile_menu_option">Script</div>
			<div class="mobile_menu_option">Textures</div>
		</div>

		<div class="headerwrap">

			<div class="mobile_dropdown_menu_icon">
				<a class="mobilemenulink" href=""><img class="mobilemenuicon" src="<%= image_path('mobilemenuicon.png') %>" /></a>
			</div>
			<div class="gtavlogomobile">
				<img src="<%= image_path('gtavlogo.png') %>" />
			</div>

			<div class="headericonswrap">
				<div class="gtavlogowrap">
					<img src="<%= image_path('gtavlogo.png') %>" />
				</div>
				<div class="headernavigationwrap">

					<a href=""><div class="individual_navigation_icon_wrap">
						<div class="top_navigation_bar"> </div>
						<img class="navigation_icon_img" src="<%= image_path('home50color.png') %>" />
						<div class="navigation_icon_text">
							Home
						</div>
					</div></a>
					<a href=""><div class="individual_navigation_icon_wrap individual_navigation_icon_wrap_active">
						<div class="top_navigation_bar top_navigation_bar_active"> </div>
						<img class="navigation_icon_img" src="<%= image_path('user50color.png') %>" />
						<div class="navigation_icon_text">
							Tools
						</div>
					</div></a>
					<a href=""><div class="individual_navigation_icon_wrap">
						<div class="top_navigation_bar"> </div>
						<img class="navigation_icon_img" src="<%= image_path('levels50color.png') %>" />
						<div class="navigation_icon_text">
							Maps
						</div>
					</div></a>
					<a href=""><div class="individual_navigation_icon_wrap">
						<div class="top_navigation_bar"> </div>
						<img class="navigation_icon_img" src="<%= image_path('car50color.png') %>" />
						<div class="navigation_icon_text">
							Vehicles
						</div>

					</div></a>
					<a href=""><div class="individual_navigation_icon_wrap">
						<div class="top_navigation_bar"> </div>
						<img class="navigation_icon_img" src="<%= image_path('user50color2.png') %>" />
						<div class="navigation_icon_text">
							Misc
						</div>
					</div></a>
					<a href=""><div class="individual_navigation_icon_wrap">
						<div class="top_navigation_bar"> </div>
						<img class="navigation_icon_img" src="<%= image_path('car50color.png') %>" />
						<div class="navigation_icon_text">
							Script
						</div>
					</div></a>
					<a href=""><div class="individual_navigation_icon_wrap">
						<div class="top_navigation_bar"> </div>
						<img class="navigation_icon_img" src="<%= image_path('upload50color.png') %>" />
						<div class="navigation_icon_text">
							Textures
						</div>
					</div></a>
				</div>
			</div>

			<div class="headerbottomtransparentbar">

			</div>

		</div>
		<div class="pagebodywrap">
			<div class="sidebar sidebar_left">
				<div class="userprofilebox">
					<div class="userinfo_profilewrap">
						<img src="<%= image_path('lcbradley3k.png') %>" />
						<div class="userinfo">
							<div class="username">LCBradley3k</div>
							<div class="userdesc">Mod Creator</div>
						</div>
						<table class="userstats">
							<tr>
								<td class="stat_title">Downloads</td>
								<td> <span class="stat_amount">10,567</span></td>
							</tr>
							<tr>
								<td class="stat_title">Comments</td>
								<td><span class="stat_amount">50</span></td>
							</tr>
							<tr>
								<td class="stat_title">Reputation</td>
								<td><span class="stat_amount">100</span></td>
							</tr>
						</table>
					</div>
					
				</div>

				<div class="subcategoriesbox">
					<div class="subcategory">
						<div class="subcategorytext subcategorytitle">Subcategories</div>
					</div>
					<div class="subcategory subcategorydark">
						<div class="subcategory_circle accentborder"></div>
						<div class="subcategorytext">All</div>
					</div>
					<div class="subcategory">
						<div class="subcategory_circle accentborder"></div>
						<div class="subcategorytext">Jeep</div>
					</div>
					<div class="subcategory subcategorydark">
						<div class="subcategory_circle accentborder"></div>
						<div class="subcategorytext">Lamborghini</div>
					</div>
					<div class="subcategory">
						<div class="subcategory_circle accentborder accentcolor"></div>
						<div class="subcategorytext activecategorytext">Ford</div>
					</div>
					<div class="subcategory subcategorydark">
						<div class="subcategory_circle accentborder"></div>
						<div class="subcategorytext">Nissan</div>
					</div>
					<div class="subcategory">
						<div class="subcategory_circle accentborder"></div>
						<div class="subcategorytext">Subaru</div>
					</div>
					<div class="subcategory subcategorydark">
						<div class="subcategory_circle accentborder"></div>
						<div class="subcategorytext">Ferrari</div>
					</div>
				</div>
			</div>
			<div class='middlepage'>
				<div ng-view></div>
			</div>
			<div class="sidebar sidebar_right">
				<div class="filteringbox">
					<div class="searchwrap">
						<input type="text" name="search" class="search" placeholder="Search" />
						<img src="<%= image_path('searchbutton.png') %>" class="searchbutton accentcolor" />
					</div>	
					<div class="sortby_box_wrap">

						<div class="sortbyoptiontitle">Time</div>
						<div class="sortby_options_wrap">
							<div class="sortbyoption">
								<div class="sortby_circle sortby_circle_active accentborder"></div>
								Today
							</div>
							<div class="sortbyoption">
								<div class="sortby_circle accentborder accentcolor"></div>
								Last Week
							</div>
							<div class="sortbyoption">
								<div class="sortby_circle accentborder"></div>
								Forever
							</div>
						</div>
						
						<div class="sortbyoptiontitle">Popularity</div>
						<div class="sortby_options_wrap">
							<div class="sortbyoption">
								<div class="sortby_circle sortby_circle_active accentborder"></div>
								Newest First
							</div>
							<div class="sortbyoption">
								<div class="sortby_circle accentborder accentcolor"></div>
								Most Popular
							</div>
							<div class="sortbyoption">
								<div class="sortby_circle accentborder"></div>
								Recently Updated
							</div>
						</div>
					</div>
				</div>
			</div>
