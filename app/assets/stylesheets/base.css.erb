    
* {
    font-family: 'Lato', Helvetica, Arial, sans-serif;
}
html {
    height: 100%;

}
body{
    background-color: #34353b;
    background-color:#2e2f38;
    margin:0;
    padding:0;
    height: 100%;
}
.logoheader {
    height:35px;
    background-color:#1e1f25;
}
.header {
    min-height:108px;
    width:100%;
    background-image:url('<%= asset_path('gtavbackground5c.png') %>');
}
.navigation_bar_wrap {
    height:108px;
    width: 100%;
    background-color: rgba(50,40,80,0.3);
    /*background-color:rgba(46,47,56,1);*/
    text-align: center;
    z-index: 30;
}

.navigation_bar_wrap ul {
    list-style-type: none;
    margin: 0;
    padding:0;
    width: 1150px;
    margin: 0 auto;
    text-align: center;
}
.navigation_bar_wrap ul li {
    display: inline-block;
    width: 125px;
    height: 104px;
    margin-top:4px;
    text-align: center;
    padding:0;
}

.navigation_bar_wrap ul li.active_menu_item {
    background-color: #2e2f38;
    margin-top:0px;
    border-top:4px solid #ef2470;
}
.navigation_bar_wrap ul li:hover {
    background-color: #2e2f38;
    margin-top:0;
    border-top:4px solid #f1f1f1;
    opacity:0.84;
}
.navigation_bar_wrap li a {
    text-decoration: none;
    margin: 0px; 
    display: block; 
    width: 100%; 
    height: 100%;
}
.navigation_bar_wrap h2 {
    color:#fff;
    font-weight:normal;
    font-size:16px;
    margin-top:8px;
    padding-top:3px;
    padding-bottom:6px;
    z-index: 50;
    position: relative;
}
.navigation_bar_wrap h2:hover {
}
.navigation_bar_wrap img {
    margin-top:-8px;
}
.fullcontentwrap {
    background-color:#2e2f38;
