    .userprofilebox {
       width:100%;
       height:160px;
   }
   
   .userinfo_profilewrap {
    text-align:left;
    margin-top:7px;
}

.user_avatar_wrap {
    display: inline-block;
    height:55px;
    width:55px;
    border:2px solid #fff;
    margin-top:14px;
    margin-left:20px;
    border-radius: 50%;
    overflow: hidden;
    background-color: transparent;
}

.userinfo_profilewrap img {
    height:55px;
    width:55px;
    
}

.userinfo {
    display: inline-block;
    vertical-align: top;
    margin-top:18px;
    margin-left:10px;
}

.username {
    color: #4f4f4f;
    font-size: 15px;
    font-weight: bold;
    margin-bottom:2px;
}

.userdesc {
    color: #939393;
    font-size: 14px;
}

.userstats {
    margin-left:0px;
    margin-top:14px;
    text-align: center;
    margin-left:4px;
}

.userstats {
    width:219px;
}
.stat_title {
    width: 73px;
}

img.user_stat_icon  {
    width: 21px;
    height: 21px;
}

.stat_amount {
    color: #4f4f4f;
    font-size:13px;
    padding:2px 4px 2px 4px;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    border-radius: 2px;
    border:1px solid transparent;
}

.subcategoriesbox {
    width:100%;
    height:400px;
}

.subcategory {
    width:100%;
    height:40px;
    text-align:left;
}

.activesubcategory {
    background-color: #1a1a1a;
    border-right:5px solid #737373;
    width:198px;
}

.subcategory:hover {
    background-color:#e4ebf6;
}
.active_subcategory {
    background-color:#f1f1f1;
    border-right:5px solid #ef2470;
    -webkit-box-shadow: 7px 0px 7px 0px rgba(0,0,0,0.12);
    -moz-box-shadow: 7px 0px 7px 0px rgba(0,0,0,0.12);
    box-shadow: 7px 0px 7px 0px rgba(0,0,0,0.12);
    width:237px;
}

.subcategory:first-child {
    margin-top:8px;
}
.subcategoriesbox h3 {
    font-size: 15px;
    color:#4f4f4f;
    margin-top:10px;
    margin-left:20px;
}
.subcategories_wrap {
    background-color:#d0d9e6;
    padding-bottom: 5px;
    -webkit-box-shadow: inset 0px 0px 7px 0px rgba(0,0,0,0.05);
    -moz-box-shadow: inset 0px 0px 7px 0px rgba(0,0,0,0.05);
    box-shadow: inset 0px 0px 7px 0px rgba(0,0,0,0.05);
}
.subcategory p {
    display: inline-block;
    vertical-align: top;
    font-size: 15px;
    color:#4f4f4f;
    margin-top:10px;
    margin-left:40px;
}
.activecategorytext {
    color: #4f4f4f;
}
.subcategorytitle {
    margin-left:25px;
    font-size:15px;
    color:#4f4f4f;
}
.paginationfooter {
    width: 1150px;
    height:40px;
    margin:0 auto;
    background-color:#d8e1ef;
    border-top:2px solid #fff;
    margin-bottom:150px;
    text-align: center;
}
.paginationwrap {
    width: 908px;
    height: auto;
}

.pagination_prev_button {
    display: inline-block;
    vertical-align: top;
    text-decoration: none;
    color: #353535;
    font-weight:bold;
    font-size:18px;
    margin-right:12px;
}
.pagination_prev_button .pagination_link:hover {
    color:#e34939;
}
.pagination_next_button .pagination_link:hover {
    color:#42b84d;
}
.pagination_next_button {
    display: inline-block;
    vertical-align: top;
    text-decoration: none;
    font-weight:bold;
    font-size:18px;
    margin-left:12px;
}

.pagination_next_button .pagination_link {
    
}
.pagination_numbers_wrap {
    display: inline-block;
    vertical-align: top;
    font-size:0;
    position: relative;
    z-index:200;
    height:40px;
    background-color:#d0d9e6;
    -webkit-box-shadow: inset 0px 0px 7px 0px rgba(0,0,0,0.05);
    -moz-box-shadow: inset 0px 0px 7px 0px rgba(0,0,0,0.05);
    box-shadow: inset 0px 0px 7px 0px rgba(0,0,0,0.05);
}
.pagenumber {
    display: inline-block;
    vertical-align: top;
    height: 100%;
    width: 40px;
    font-size:18px;
    text-decoration: none;
    color: #353535;
    
    
}
.pagenumber .pagination_link:hover {
    color:#3979e3;
}
.activepagenumber {
    background-color:#fff;
    border-bottom:5px solid #ef2470;
    -webkit-box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.12);
    -moz-box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.12);
    box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.12);
}
.activepagenumber .pagination_link {
    color:#ef2470;
}
.pagination_link {
    text-decoration: none;
    color: #4f4f4f;
    margin-top:7px;
    vertical-align: top;
}

@media(max-width:1160px) {

    .mainpagewrap {
        width:900px;
        position: relative;
    }
    
    .mainpage {
        width:900px;
    }
    
    .right_sidebar {
        position:absolute;
        right:0;
        opacity:0.98;
        -webkit-box-shadow: -8px -1px 8px -8px rgba(0,0,0,0.56);
        -moz-box-shadow: -8px -1px 8px -8px rgba(0,0,0,0.56);
        box-shadow: -8px -1px 8px -8px rgba(0,0,0,0.56);
        z-index:300;
        display: none;
    }
    .right_sidebar_preview {
        display: block;
        background-color:#d8e1ef;
        position: absolute;
        right:0;
        width:15px;
        height: 100%;
        -webkit-box-shadow: -2px 0px 6px 0px rgba(0,0,0,0.12);
        -moz-box-shadow: -2px 0px 6px 0px rgba(0,0,0,0.12);
        box-shadow: -2px 0px 6px 0px rgba(0,0,0,0.12);
        z-index:400;
        border-left:1px solid #d1d8e3;
    }
    .showsidebar {
        display: block;
    }
    .showsidebarpreview {
        display: none;
    }
    .sidebar_expand_button {
        position: fixed;
        margin-top:130px;
    }
    .sorting_options_wrap {
        width: 900px;
        z-index:200;
        position: relative;
    }
    .navigation_bar_wrap ul {
        width: 900px;
    }
    .navigation_bar_wrap ul li {
        width: 97px;
    }
    .paginationfooter {
        width:900px;
        position: relative;
        z-index: 300;
    }


