        .mainpagewrap {
            width:1150px;
            margin:0 auto;
            height:auto;
            background-color:#f1f1f1;
            -webkit-box-shadow: 0px 0px 7px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 0px 0px 7px 0px rgba(0,0,0,0.75);
            box-shadow: 0px 0px 7px 0px rgba(0,0,0,0.75);
            overflow: hidden;
        }
        .mainpage {
            width: 908px;
            height: auto;
            float: left;
            text-align: center;
            background-color:#f1f1f1;
            padding-bottom:40px;
        }
        .right_sidebar {
            width:242px;
            height: 100%;
            background-color:#d8e1ef;
            float: right;
            position: relative;
            padding-bottom: 5000px;
            margin-bottom: -5000px;
        }
        .right_sidebar_preview {
            display: none;
        }

        .showsidebar {
            display: block;
        }
        .showsidebarpreview {
            display: none;
        }
        .modsortingoptions_wrap {
            width: 320px;
            float:left;
        }
        #modsortingoptions {
            width:auto;
            height: 100%;
            right:0;
            z-index: 2;
            padding-top:0;
            font-weight:normal;
            display: inline-block;
        }

        #modsortingoptions:hover {
            background-color:#1e1f25;
            background-color:#484957;
        }

        #modsortingoptions a {
            text-decoration:none;
            color:#f1f1f1;
            margin-left:10px;
        }

        #modsortingoptions ul {
            list-style:none;
            position:relative;
            display:inline-table;
            height:100%;
            margin-top:0;
            padding-left:0px;
            padding-right:0px;
        }

        #modsortingoptions ul li {
            font-size:18px;
            font-weight: 400;
            width:150px;
            height:100%; 
            padding-top:14px;
        }

        .downarrowsymbol {
            font-size:13px;
            margin-top:7px;
            float:right;
            margin-right:10px;
        }
        #modsortingoptions ul ul {
            display:none;
        }

        #modsortingoptions ul li:hover > ul {
            display:block;
        }

        #modsortingoptions ul ul {
            position: absolute; 
            top: 100%;
            z-index:100;
        }

        #modsortingoptions ul ul li {
            position:relative;
            color:#f1f1f1;
            font-size:13px;
            display:block;
            white-space:nowrap;
            text-align: left;
            width: 140px;
            padding-left:10px;
            background-color: #3b3d48;
            background-color:#505261;
            padding-top:0;
            font-weight: normal;
        }

        #modsortingoptions ul ul li a{
            float:left;
            position:relative;
            padding-left:20px;
            margin-left:0px;
            width:100%;
            padding:14px 0px 16px 10px;
            margin-left:-10px;
        }

        #modsortingoptions ul ul li:hover > a{
            color:#f1f1f1;
            background-color:#5c5e6d;
        }
